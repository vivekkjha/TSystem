<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/TSystemActionBarMenuTextAppearance</item>
        <item name="android:windowBackground">@android:color/white</item>


    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/primaryTextLibrary</item>
        <item name="android:textColorSecondary">@color/secondaryTextLibrary</item>
        <item name="alertDialogTheme">@style/TSystemDialog</item>c
        <item name="android:alertDialogTheme">@style/TSystemDialog</item>

    </style>

    <style name="AppThemeDefault" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTSystemTheme" parent="AppThemeDefault">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Base.Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- for title color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- for overflow menu button-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <!-- for overFlow menu item textColor-->
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyleLanding" parent="Base.Theme">
        <item name="android:textColorPrimary">@color/gray_800</item>
        <!-- for title color-->
        <item name="android:textColorSecondary">@color/gray_800</item>
        <!-- for overflow menu button-->
        <item name="android:textColor">@color/gray_800</item>
        <!-- for overFlow menu item textColor-->
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <style name="TSystemDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TSystemAlertWindowTitleStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/gray_600</item>
    </style>

    <style name="TSystemAlertWindowTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/TSystemTheme.Dialog.Title</item>
    </style>

    <style name="TSystemTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">16sp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TSystemTheme.Dialog.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TSystemTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">15sp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TSystemTheme.Title.Colored" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">16sp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TSystemTheme.AppTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">22sp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TSystemActionBarMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textColor">#8000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
